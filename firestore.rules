rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow list: if resourceMatchesUID();
    }

    match /connectionRequests/{password} {
      allow get: if true;
      allow list: if resourceMatchesUID();

      allow create: if requestMatchesUID();
    }

    match /sessions/{deviceId} {
      allow get: if true;
      allow list: if resourceMatchesUID();

      allow create: if canCreateSession();
      allow delete: if resourceMatchesUID();
    }






    function requestMatchesUID() {
        return request.auth.uid == request.resource.data.uid;
    }

    function resourceMatchesUID() {
        return request.auth.uid == resource.data.uid;
    }

    function canCreateSession() {
      let password = request.resource.data.password;
      let passwordIsValid = exists(/databases/$(database)/documents/connectionRequests/$(password));
      let hasUID = ("uid" in request.resource.data);
      let hasDeviceId = ("deviceId" in request.resource.data);

      return passwordIsValid && hasUID && hasDeviceId;
    }
  }
}
